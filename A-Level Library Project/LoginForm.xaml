<Window x:Class="A_Level_Library_Project.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A_Level_Library_Project"
        mc:Ignorable="d"
        Title="LoginForm" Height="160" Width="220">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.053,-0.385" Height="24"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="24" Margin="81,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="txtUsername_TextChanged"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="63" Height="24"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="80,50,0,0" VerticalAlignment="Top" Width="120" Height="24" PasswordChanged="txtPassword_PasswordChanged"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="120,90,0,0" VerticalAlignment="Top" Width="80" Height="24" Grid.RowSpan="2" Click="btnLogin_Click" IsDefault="True" IsEnabled="False"/>
    </Grid>
</Window>
